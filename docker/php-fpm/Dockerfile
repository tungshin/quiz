FROM phpdockerio/php:8.1-fpm
WORKDIR "/www"

RUN apt-get update; \
    apt-get -y --no-install-recommends install \
        php8.1-mysql \ 
        php8.1-redis; \
    apt-get clean; \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/*
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/www --filename=composer \
    composer update \
    composer install
